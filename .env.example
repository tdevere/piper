# LLM Configuration
LLM_ENABLED=true
LLM_PROVIDER=openai

# Provider Options:
# - openai: OpenAI API (requires OPENAI_API_KEY)
# - copilot-cli: GitHub Copilot CLI (requires gh CLI with copilot extension)
# - azure: Azure OpenAI (requires AZURE_OPENAI_*)

# Option 1: OpenAI API
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4o

# Option 2: Azure OpenAI
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=gpt-4

# LLM Settings
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.3
