{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "pattern": { "type": "string" },
          "replacement": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name", "pattern", "replacement"]
      }
    }
  },
  "required": ["rules"]
}
